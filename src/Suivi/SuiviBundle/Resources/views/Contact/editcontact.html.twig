{% extends 'SuiviVenteBundle::layout.html.twig' %}
{% block body %}

    <title>Suivi Vente | Dashboard</title>

    {% include 'SuiviVenteBundle::header.html.twig' %}
    {% include 'SuiviVenteBundle::colonne-gauche.html.twig' %}


    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Liste des Contacts

            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
                <li class="active">Contact</li>
                <li class="active">Liste des contacts</li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-6">
              <!-- general form elements -->
              <div class="box box-primary">
                <div class="box-header">
                  <h3 class="box-title">Modifier Contact</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
            <form role="form" method="Post" action="{{path('categorie_edit',{id:categorie.id})}}">
                  <div class="box-body">
                    <div class="form-group">
                      <label for="nom">Nom catégorie</label>
                      {{form_widget(form.nom,{'attr':{'class':'form-control'}})}}
                     
                    </div>
                    <div class="form-group">
                      <label for="description">Description</label>
                  
                       {{form_widget(form.description,{'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="form-group">
                      <label for="date">Date création</label>
                     
                     {{form_widget(form.dateCreation)}}
                    </div>
               <div class="box-footer">
                      {{form_widget(form._token)}}
                    <button type="submit" class="btn btn-primary">Valider</button>
                   
                  </div>

                
                 
                        <a href="{{ path('contact_liste') }}">
                          <img src="{{asset("bundles/adminTemplate/img/MB__back.png")}}">
                        </a>
                    
                
                            </form>
                
              </div><!-- /.box -->
                
                </div><!-- /.row -->
</section>
            </div>		  

 


    </div><!-- ./wrapper -->


{% endblock %}