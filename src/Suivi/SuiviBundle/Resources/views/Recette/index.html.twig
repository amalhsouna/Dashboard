{% extends 'SuiviVenteBundle::layout.html.twig' %}
{% block body %}

    <title>Suivi Vente | Dashboard</title>

      {% include 'SuiviVenteBundle::header.html.twig' %}
      {% include 'SuiviVenteBundle::colonne-gauche.html.twig' %}


 <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
      <br>
          <ol class="breadcrumb">
            <li><a href="#"><i class="glyphicon glyphicon-hand-right"></i> Accueil</a></li>
            <li class="active">Recette</li>
            <li class="active">Liste des Recettes</li>
          </ol>
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-xs-12">
              <div class="box">
                <div class="box-header">
                  <span class="objectif">Recette par date</span>

                     <form method="post" action={{path('recette_resultat')}} class="formdate">
                       {{ form_start(formdate) }}
                       {{ form_label(formdate.date1) }}
                       {{ form_errors(formdate.date1) }}
                       {{ form_widget(formdate.date1) }}
                       {{ form_label(formdate.date2) }}
                       {{ form_errors(formdate.date2) }}
                       {{ form_widget(formdate.date2) }}
                      
                       <button type="submit" class="btn btn-primary">Ok</button>
                     {{ form_end(formdate) }}

                     </form>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table id="exemple1" class="table">
                    <thead>
                      <tr>

                <th>Offres</th>
                <th>Quantité</th>
                <th>Prix</th>
                <th>Date</th>
                <th>Prix total</th>

                      </tr>
                    </thead>
                    <tbody>
                     {% for entity in recette %}
                <tr>
                <td>{{ entity.offres.nom }}</td>
                <td>{{ entity.quantite }}</td>
                <td>{{ entity.offres.prixunitaire }}</td>
                <td>{{ entity.date|date('Y/m/d') }}</td>
                <td class="rowDataSd">{% set prixtotal = entity.offres.prixunitaire * entity.quantite %}
                    {{ prixtotal }}
                </td>
                </tr>
                
    
        {% endfor %}
        
         <tr>
             <td class="total">
                 Total général
             </td>
              <td>

             </td>
              <td>

             </td>
              <td class="total">
                  <td class="totalCol">Total:</td>
             </td>
             

             </td>
         </tr>
                    </tbody>
                  
                  </table>
                  
                 </div>
      

  </div><!-- /.box-body -->

              </div><!-- /.box -->
          
            </div><!-- /.col -->
          </div><!-- /.row -->
	</section>
 </div>


{% include 'SuiviVenteBundle::footer.html.twig' %}


    </div><!-- ./wrapper -->
    

    {% endblock %}