{% extends 'SuiviVenteBundle::layout.html.twig' %}
{% block body %}

<title>Suivi Vente | Dashboard</title>

{% include 'SuiviVenteBundle::header.html.twig' %}
  {% include 'SuiviVenteBundle::colonne-gauche.html.twig' %}
   

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
          Gestion Catégories

          </h1>
          <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
            <li class="active">Gestion Catégories</li>
            <li class="active">Ajouter</li>
          </ol>
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="row">
            <!-- left column -->
            <div class="col-md-6">
              <!-- general form elements -->
              <div class="box box-primary">
                <div class="box-header">
                  <h3 class="box-title">Ajout Catégorie</h3>
                </div><!-- /.box-header -->
                <!-- form start -->

                <form role="form" method="Post" action="{{path('categorie_create')}}">
                  <div class="box-body">
                    <div class="form-group">
                      <label for="nom">Nom catégorie</label>
                      {{form_widget(form.nom,{'attr':{'class':'form-control'}})}}

                    </div>
                    <div class="form-group">
                      <label for="description">Description</label>

                       {{form_widget(form.description,{'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="form-group">
                      <label for="date">Date création</label>

                     {{form_widget(form.dateCreation)}}
                    </div>
               <div class="box-footer">
                      {{form_widget(form._token)}}
                    <button type="submit" class="btn btn-primary">Ajouter</button>

                  </div>
                        <a href="{{ path('categorie') }}">
                          <img src="{{asset("bundles/adminTemplate/img/MB__back.png")}}">
                        </a>


                            </form>
              </div><!-- /.box -->
</section>
 </div>

        {% include 'SuiviVenteBundle::footer.html.twig' %}



        {% endblock %}

