{% extends 'SuiviVenteBundle::layout.html.twig' %}
{% block body %}

<title>Suivi Vente | Dashboard</title>

{% include 'SuiviVenteBundle::header.html.twig' %}
      {% include 'SuiviVenteBundle::colonne-gauche.html.twig' %}

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
          Gestion Offres
            
          </h1>
          <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
            <li class="active">Gestion Offres</li>
            <li class="active">Ajouter</li>
          </ol>
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="row">
            <!-- left column -->
            <div class="col-md-6">
              <!-- general form elements -->
              <div class="box box-primary">
                <div class="box-header">
                  <h3 class="box-title">Ajout Offre</h3>
                </div><!-- /.box-header -->
                {% if message %}
               <div class="alert alert-success">
                    <a href="#" class="close" data-dismiss="alert">{{ message }}&times;</a>
                </div>
                
                {% endif %}
        
                <!-- form start -->
                <form role="form" method="Post" action="{{path('offres_create')}}">
                  <div class="box-body">
                    <div class="form-group">
                      <label for="nom">Nom offre</label>
                      {{form_widget(form.nom,{'attr':{'class':'form-control'}})}}
                     
                    </div>
                    <div class="form-group">
                      <label for="description">Description</label>
                  
                       {{form_widget(form.description,{'attr':{'class':'form-control'}})}}
                    </div>
					<div class="form-group">
                      <label for="prix">Prix Unitaire</label>
                  
                       {{form_widget(form.prixunitaire,{'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="form-group">
                      <label for="date">Status</label>
                     
                     {{form_widget(form.status,{'attr':{'class':'form-control'}})}}
                    </div>
                     <div class="form-group">
                         <label for="date">Cat√©gorie</label>

                         {{form_widget(form.categ,{'attr':{'class':'form-control'}})}}
                     </div>
               <div class="box-footer">
                      {{form_widget(form._token)}}
                    <button type="submit" class="btn btn-primary">Ajouter</button>
                   
                  </div>

                
                 
                        <a href="{{ path('offres') }}">
                          <img src="{{asset("bundles/adminTemplate/img/MB__back.png")}}">
                        </a>
                    
                </div><!-- /.box -->
                            </form>
              
</section>

            
{% include 'SuiviVenteBundle::footer.html.twig' %}

    </div><!-- ./wrapper -->


    {% endblock %}
